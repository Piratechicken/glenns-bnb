<!DOCTYPE html>
<html>
  <head>
    <title>GlennBnb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
    <%= link_to('View listings', listings_path, method: :get, class: 'btn btn-primary') %>
    <% if user_signed_in? %>
      <%= link_to('My mail', conversations_path, method: :get, class: 'btn btn-primary') %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger') %>
    <% else %>
      <%= link_to('Login', new_user_session_path, class: 'btn btn-danger') %>
    <% end %>
  </nav>  
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
